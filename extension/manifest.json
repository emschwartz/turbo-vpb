{
    "manifest_version": 2,
    "name": "TurboVPB",
    "version": "0.4.4",
    "description": "Make OpenVPB more efficient",
    "author": "Evan Schwartz",
    "homepage_url": "https://turbovpb.com",
    "permissions": [
        "storage",
        "*://turbovpb-peerjs-server.herokuapp.com/*"
    ],
    "icons": {
        "48": "icons/phone-outgoing-48.png",
        "96": "icons/phone-outgoing-96.png",
        "128": "icons/phone-outgoing-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.openvpb.com/VirtualPhoneBank/*"
            ],
            "js": [
                "dependencies/browser-polyfill.js",
                "dependencies/easy.qrcode.js",
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "icons/phone-outgoing-48.png"
    ],
    "background": {
        "scripts": [
            "dependencies/browser-polyfill.js",
            "dependencies/peerjs.js",
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://turbovpb.com/updates.json"
        }
    }
}