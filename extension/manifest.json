{
    "manifest_version": 2,
    "name": "TurboVPB",
    "version": "0.1.0",
    "description": "Make OpenVPB more efficient",
    "permissions": [
        "storage",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "https://api.securevan.com/*",
        "*://turbovpb-peerjs-server.herokuapp.com/*",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.openvpb.com/VirtualPhoneBank/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "base64url-arraybuffer.js",
            "peerjs.min.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon-grey.svg"
    }
}