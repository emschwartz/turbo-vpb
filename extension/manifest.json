{
    "manifest_version": 2,
    "name": "TurboVPB",
    "version": "0.1.1",
    "description": "Make OpenVPB more efficient",
    "permissions": [
        "storage",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "*://*.turbovpb.com/*",
        "*://turbovpb-peerjs-server.herokuapp.com/*",
        "https://api.securevan.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.openvpb.com/VirtualPhoneBank/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "base64url-arraybuffer.js",
            "peerjs.min.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "phone-outgoing.svg",
        "default_popup": "popup.html",
        "browser_style": true
    },
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://turbovpb.com/updates.json"
        }
    }
}