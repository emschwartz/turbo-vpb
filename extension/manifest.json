{
    "manifest_version": 2,
    "name": "TurboVPB",
    "version": "0.2.1",
    "description": "Make OpenVPB more efficient",
    "author": "Evan Schwartz",
    "homepage_url": "https://turbovpb.com",
    "permissions": [
        "storage",
        "activeTab",
        "*://turbovpb-peerjs-server.herokuapp.com/*"
    ],
    "icons": {
        "48": "phone-outgoing.svg",
        "96": "phone-outgoing.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.openvpb.com/VirtualPhoneBank/*"
            ],
            "js": [
                "dependencies/browser-polyfill.js",
                "dependencies/qrcode.js",
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "dependencies/browser-polyfill.js",
            "dependencies/peerjs.js",
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://turbovpb.com/updates.json"
        }
    }
}