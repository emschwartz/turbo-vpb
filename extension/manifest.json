{
    "manifest_version": 2,
    "name": "TurboVPB",
    "version": "0.6.5",
    "description": "Turbocharge phone banking with Open Virtual Phone Bank (OpenVPB), VAN / EveryAction, and BlueVote.",
    "author": "Evan Schwartz",
    "homepage_url": "https://turbovpb.com",
    "permissions": [
        "storage",
        "*://*.turbovpb.com/*"
    ],
    "optional_permissions": [
        "https://*.everyaction.com/ContactDetailScript*",
        "https://www.votebuilder.com/ContactDetailScript*",
        "https://phonebank.bluevote.com/*"
    ],
    "icons": {
        "48": "icons/phone-outgoing-48.png",
        "96": "icons/phone-outgoing-96.png",
        "128": "icons/phone-outgoing-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.openvpb.com/VirtualPhoneBank/*"
            ],
            "js": [
                "dependencies/browser-polyfill.js",
                "dependencies/kjua.js",
                "content.js",
                "openvpb.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "dependencies/browser-polyfill.js",
            "dependencies/content-scripts-register-polyfill.js",
            "dependencies/peerjs.js",
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}